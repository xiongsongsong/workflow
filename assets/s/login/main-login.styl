@import "../variable"

html, body
  width 100%
  height 100%

body
  background #42464e url(./img/bg.jpg)
  background-size 100% 100%

#login
  width 478px
  height 306px
  position absolute
  left 50%
  top 50%
  margin-top unquote("-153px")
  margin-left unquote("-239px")
  filter unquote("progid:DXImageTransform.Microsoft.gradient(enabled='true',startColorstr='#4C000000', endColorstr='#4C000000')")
  background rgba(0, 0, 0, 0.3);
  border-radius 4px
  box-shadow 2px 2px 2px rgba(0, 0, 0, .2)
  font-family "Microsoft Yahei", simhei, sans-serif
  color #fff

#login .user-name
  margin-top 78px
  margin-bottom 26px

#login input[type=text]
#login input[type=password]
  width 225px
  height 30px
  border-radius 2px
  box-shadow inset 1px 2px 2px rgba(0, 0, 0, .5)
  border none
  background #fff
  margin-left 38px
  padding-left 5px
  outline none

#login input[type=text]:focus
#login input[type=password]:focus
  background #e1ffdf

#login label
  display inline-block
  width 120px
  text-align right

#login .control
  margin-top 58px
  text-align center

#login .control input
  color #fff
  margin 0 12px
