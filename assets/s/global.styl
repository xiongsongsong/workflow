@import "./variable"

html
  background #bebfb3

body
  font-family "Microsoft Yahei", sans-serif
  color #333

.clearfix:after
  content: "."
  display: block
  height: 0
  clear: both
  visibility: hidden

.clearfix
  zoom: 1

.btn
  display inline-block
  border none
  padding 7px 29px
  font-family "Microsoft Yahei", sans-serif
  font-size 12px
  border-radius 2px
  background transparent
  margin-left 12px
  margin-right 12px

.btn.confirm
  background btn-color
  color #fff

table.task-list
  width 100%
  font-size 12px
  margin 23px auto

table.task-list th
  background #ededed
  border-top solid 1px #b2b2b2
  border-bottom solid 1px #b2b2b2
  padding 3px 0
  text-align center

table.task-list tr:nth-child(2n-1)
  background #ededed

table.task-list td
  padding 4px 0
  text-align center

table.task-list tr:hover
  background #ddd
